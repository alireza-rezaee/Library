@using Mohkazv.Library.WebApp.Extensions
@model IEnumerable<Mohkazv.Library.WebApp.Models.Author>

@{
    ViewData["Title"] = "فهرست نویسندگان";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="#" class="btn btn-light border my-2 js-history-back">
        <i class="bi bi-arrow-right"></i>
        بازگشت
    </a>
    <a asp-controller="Authors" asp-action="Create" class="btn btn-primary">افزودن نویسنده</a>
</p>


<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th style="width: 35px;">ردیف</th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    عملیات‌ها
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = Model.Count();
                @for (var i = 0; i < count; i++)
                {
                    var item = Model.ElementAt(i);
                    <tr>
                        <td class="text-center" style="width: 35px;">@((i+1).EnglishToPersian())</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            <a asp-controller="Authors" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success lh-1" style="font-size:0 !important;">
                                <i class="bi bi-pen fs-6"></i>
                            </a>
                            <a asp-controller="Authors" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger lh-1" style="font-size:0 !important;">
                                <i class="bi bi-trash fs-6"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

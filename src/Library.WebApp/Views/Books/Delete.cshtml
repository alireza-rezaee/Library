@model Mohkazv.Library.WebApp.Models.Book

@{
    ViewData["Title"] = $"حذف کتاب «{Model.Name}»";
}

<h1>@ViewData["Title"]</h1>

<div class="row fa-num">
    <div class="col-12 col-md-6">
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Name)" disabled>
            <label asp-for="Name"></label>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-floating mb-3">
            <input asp-for="Isbn" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Isbn)" disabled>
            <label asp-for="Isbn"></label>
            <span asp-validation-for="Isbn" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-floating mb-3">
            <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.PublisherId" disabled>
                <option disabled selected>انتخاب کنید...</option>
            </select>
            <label asp-for="PublisherId"></label>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-floating mb-3">
            <input asp-for="PublishInformation" class="form-control" placeholder="@Html.DisplayNameFor(model => model.PublishInformation)" disabled>
            <label asp-for="PublishInformation"></label>
            <span asp-validation-for="PublishInformation" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-floating mb-3">
            <select asp-for="DdcId" class="form-control" asp-items="ViewBag.DdcId" disabled>
                <option disabled selected>انتخاب کنید...</option>
            </select>
            <label asp-for="DdcId"></label>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-floating mb-3">
            <input asp-for="TypeId" class="form-control" placeholder="@Html.DisplayNameFor(model => model.TypeId)" disabled>
            <label asp-for="TypeId"></label>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="form-floating mb-3">
            <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId" placeholder="@Html.DisplayNameFor(model => model.Language)" disabled>
                <option disabled selected>انتخاب کنید...</option>
            </select>
            <label asp-for="LanguageId"></label>
        </div>
    </div>
    <div class="col-12">
        <div class="form-floating mb-3">
            <textarea class="form-control" asp-for="Description" style="height: 100px" placeholder="توضیحاتی بنویسید..." disabled></textarea>
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-2">
        <a href="#" class="btn btn-light border my-2 js-history-back">
            <i class="bi bi-arrow-right"></i>
            بازگشت
        </a>
        <a asp-controller="Books" asp-action="Index" class="btn btn-light border my-2">
            <i class="bi bi-list"></i>
        </a>
        <a asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success"><i class="bi bi-pen fs-6"></i></a>
        <form asp-controller="Books" asp-action="Delete" class="d-inline-block">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                تایید و حذف دائمی
            </button>
        </form>
    </div>
</div>


@model Mohkazv.Library.WebApp.Models.Language

@{
    ViewData["Title"] = "حذف زبان";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger" role="alert">
    <b>هشدار:</b>
    شما در حال حذف زبان
    «@Model.Name»
    می‌باشید. آیا از حذف دائمی اطمینان دارید؟
</div>

<div>
    <div class="col-12 col-md-4">
        <div class="mb-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <form asp-action="Delete">
            <a href="#" class="btn btn-light border my-2 js-history-back">
                <i class="bi bi-arrow-right"></i>
                بازگشت
            </a>
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">حذف دائم</button>
        </form>
    </div>
</div>

@using Microsoft.AspNetCore.Identity
@using Mohkazv.Library.WebApp.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="me-auto position-relative">
    <button type="button" class="btn btn-default h-100 d-block d-sm-none nav-shortcuts-trigger float-start float-sm-none" id="js-nav-shortcuts-trigger">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-list" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
        </svg>
    </button>
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-area="Identity" asp-page="/account/manage/index" class="d-block d-sm-none p-2 float-start float-sm-none" style="line-height:0;">
            <img alt="..." src="/uploads/profile/avatar-64x.jpg" class="img-fluid rounded-circle" style="height: 35px;">
        </a>
    }
    else
    {
        <div class="d-flex d-sm-none align-items-center nav-shortcuts mx-0">
            <a asp-area="Identity" asp-page="/account/login" class="p-2" style="line-height:0;">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-lock" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M11.5 8h-7a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1zm-7-1a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7zm0-3a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z" />
                </svg>
            </a>
        </div>
    }
    <ul class="d-none d-sm-flex align-items-center px-0 nav-shortcuts" id="js-nav-shortcuts">
        <partial name="_HeadNavItemsPartial" />
    </ul>
</div>